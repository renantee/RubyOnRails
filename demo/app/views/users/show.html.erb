<p id="notice"><%= notice %></p>
<%= debug @user %>
<%= simple_format @user.to_yaml %>
<%= @user.inspect %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Login:</strong>
  <%= @user.login %>
</p>

<p>
  <strong>Avatar:</strong>
  <% if @user.avatar.present? %>
    <%= image_tag(url_for(@user.avatar)) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
